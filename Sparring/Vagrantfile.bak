HOST_USER = 'crist'
VM_USER = 'Sparring'
HOST_PATH = '/Users/' + HOST_USER + '/TFG/Sparring/Share'
GUEST_PATH = '/home/' + VM_USER + '/Share'

Vagrant.configure("2") do |config|

    config.timezone.value = "Europe/Madrid"

    config.vm.define "Sparring" do |master|
      master.vm.box = "bento/ubuntu-20.04"
      master.vm.hostname = "Sparring"
      master.vm.network "public_network"
      master.disksize.size = '20GB'
      master.vm.provider "virtualbox" do |vb|
        vb.name = "Sparring"
	      vb.memory = 2092
        vb.cpus = 3
	config.vm.boot_timeout = 600
      end
		master.vm.synced_folder HOST_PATH, GUEST_PATH
		
    end
end
